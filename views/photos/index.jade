script
    // Use ECMAScript5 classList collection to toggle the class "photoList" on the body tag:
    document.body.classList.toggle('photoList')
p
  a(href='/logout', class="logout") Logout
h1 Available Photos:

p
  a(href='/products/', class='button back') Back
  a(href='/photos/new', class='button') Add new photo

ul
  - each photo in photos
    // Separate the file name from the path to put under the image.
    // Ignore the blank.png image.
    - if (!/blank/.test(photo))
      - var imgName = photo.split('/');
      - imgName = imgName[imgName.length-1]
      li
        img(src=photo)
        p.name= imgName
